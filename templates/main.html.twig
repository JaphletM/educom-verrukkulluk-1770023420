<script>
$(document).ready(function() {

  $(".js-fav").click(function(e) {
    e.preventDefault();
    const icon = $(this).find("i");

    icon.toggleClass("fa-regular fa-solid active");
  });

$(".star").click( function() {
            const value = $(this).attr('data-value')
             
            /// Clear all the red stars 
            $(".star").removeClass('yellow')
            
            /// Paint it Red!
            $('.star').each( (index, elem) => {
              const itemValue = $(elem).attr('data-value')
              if(itemValue <= value) {
                $(elem).addClass('yellow')
              }
            })
            ///
          });
$(".star").click(function (e) {
