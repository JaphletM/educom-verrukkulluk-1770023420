{% extends "main.html.twig" %}

{% block header %}
  <div class="hero-header">
    <img src="assets/img/healthy-bowl-frische.jpg" class="hero-bg" alt="">
     <a href="index.php?action=homepage">
         <img src="assets/img/logo-v2.png" class="hero-logo" alt="Logo">
    </a>
  </div>
{% endblock %}


{% block content %}
    <h1 style="color:var(--lighter-green)">Boodschappenlijst</h1>

 <ul>
{% set totaal = 0 %}

{% for item in data %}

  {% set item_totaal = item.prijs * item.aantal_verpakkingen %}
  {% set totaal = totaal + item_totaal %}
 

  <li>
      Artikel:{{ item.naam }} -
      Aantal: 
   
          <input  class="js-qty" type="number" name="aantal_verpakkingen" data-prijs="{{item.prijs}}" data-artikel="{{ item.artikel_id }}" value="{{ item.aantal_verpakkingen }}"> 

      Prijs: €{{ item.prijs / 100 }} -
      Subtotaal:<span class="js-item-total" data-value="{{item_totaal}}"> €{{ item_totaal / 100 }}</span> 
        <a href="index.php?action=delete&artikel_id={{item.artikel_id}}" class="fa fa-trash "></a>
  </li>

{% else %}
  <li>Je boodschappenlijst is leeg.</li>
{% endfor %}
</ul>
<h3>Totaal: </h3> <span class="js-list-total" data-value="{{totaal}}">€{{totaal /100}} </span>


    
{% endblock %}