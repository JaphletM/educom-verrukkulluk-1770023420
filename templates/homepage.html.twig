{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}

{% block header %}
<div class="hero-header">
    <img src="assets/img/healthy-bowl-frische.jpg" class="hero-bg" alt="">
    <img src="assets/img/logo-v2.png" class="hero-logo" alt="Logo">
</div>
{% endblock %}


{# nu de block content op in de main pagina vullen #}
{% block content %}
  <ul>
    {% for record in data %}
    <div class="recipe-grid">
    <div class="recipe-box">

        {% if record.afbeelding %}
          <img src="{{ record.afbeelding }}" class="main-img" alt="gerecht">
        {% endif %}

        <h2> {{record.gerecht_titel}}</h2>
        <strong>{{ record.keuken_type }} â€¢ {{ record.gerecht_type }}</strong><br>
        <em>Door {{ record.usernaam}} ({{ record.datum_toegevoegd }})</em><br>

        <p>{{ attribute(record, 'korte omschrijving') }}</p>

         {# sub-loop: ingredients #}
        <div>
          {% for ingr in record.ingredients %}
            <li>
              {{ ingr.naam }} 
            </li>
          {% endfor %}
        </div>

        <a href="#" class="smullen-btn">
            <h2>Smullen!</h2>
        </a>
        <img src="assets/img/46424798-euro-teken-icoon-aan-wit-achtergrond-vector.jpg" width="20px">
        <img src="assets/img/istockphoto-993103334-612x612.jpg" width="20px">
        <img src="assets/img/vuur.png" width="20px">


        </div>
    </div>

       
    </div>
    {% else %}
      <li>Geen gerechten gevonden.</li>
    {% endfor %}
  </ul>
 
  {# Dump  #}
  <pre>{{ dump(data) }}</pre>
 

{% endblock %}
